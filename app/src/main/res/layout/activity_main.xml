<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.menu.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundPrimaryColor"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ys_display_medium"
            android:paddingBottom="24dp"
            android:text="@string/app_name"
            android:textColor="@color/yp_white"
            android:textSize="@dimen/title_text_size" />

        <Button
            android:id="@+id/search_button"
            style="@style/MainMenuButtonStyle"
            android:text="@string/search"
            app:icon="@drawable/search_icon" />

        <Button
            android:id="@+id/media_button"
            android:text="@string/media"
            style="@style/MainMenuButtonStyle"
            app:icon="@drawable/media_icon" />

        <Button
            android:id="@+id/settings_button"
            style="@style/MainMenuButtonStyle"
            android:text="@string/settings"
            android:layout_marginBottom="28dp"
            app:icon="@drawable/settings_icon" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>