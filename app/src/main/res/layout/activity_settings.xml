<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="28dp"
            android:backgroundTint="@android:color/transparent"
            android:src="@drawable/arrow_back_icon"
            app:tint="@color/text_settings_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="@color/text_settings_black"
            android:textSize="@dimen/title_text_size" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/padding_medium">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:text="@string/settings_theme"
            android:textColor="@color/text_settings_black"
            android:textSize="@dimen/text_size_medium" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/padding_medium">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:text="@string/settings_share"
            android:textColor="@color/text_settings_black"
            android:textSize="@dimen/text_size_medium" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="end"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/share_icon"
            app:tint="@color/settings_icon_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/padding_medium">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:text="@string/settings_support"
            android:textColor="@color/text_settings_black"
            android:textSize="@dimen/text_size_medium" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="end"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/support_icon"
            app:tint="@color/settings_icon_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:padding="@dimen/padding_medium">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_weight="1"
            android:text="@string/settings_user_agreement"
            android:textColor="@color/text_settings_black"
            android:textSize="@dimen/text_size_medium" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:gravity="end"
            android:backgroundTint="@android:color/transparent"
            app:srcCompat="@drawable/arrow_forward_icon"
            app:tint="@color/settings_icon_color" />

    </LinearLayout>


</LinearLayout>