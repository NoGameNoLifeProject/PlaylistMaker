<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundPrimaryColor">@color/yp_black</item>
        <item name="backgroundSecondaryColor">@color/yp_black</item>
        <item name="textColorPrimary">@color/yp_black</item>
        <item name="textColorSecondary">@color/yp_white</item>
        <item name="android:statusBarColor">?backgroundPrimaryColor</item>
    </style>

    <style name="Theme.SearchBar" parent="Theme.PlaylistMaker">
        <item name="backgroundPrimaryColor">@color/yp_white</item>
        <item name="textColorPrimary">@color/yp_black</item>
        <item name="textColorSecondary">@color/yp_black</item>
    </style>

    <style name="Theme.SearchResults" parent="Theme.PlaylistMaker">
        <item name="textColorPrimary">@color/yp_white</item>
        <item name="textColorSecondary">@color/yp_white</item>
    </style>
</resources>