<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.PlaylistMaker" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundPrimaryColor">@color/yp_blue</item>
        <item name="backgroundSecondaryColor">@color/yp_white</item>
        <item name="textColorPrimary">@color/yp_black</item>
        <item name="textColorSecondary">@color/yp_black</item>
        <item name="android:statusBarColor">?backgroundPrimaryColor</item>
        <item name="iconColorPrimary">@color/yp_black</item>
        <item name="iconColorSecondary">@color/yp_text_gray</item>
    </style>

    <style name="Theme.SearchBar" parent="Theme.PlaylistMaker">
        <item name="backgroundPrimaryColor">@color/yp_light_gray</item>
        <item name="textColorPrimary">@color/yp_black</item>
        <item name="textColorSecondary">@color/yp_text_gray</item>
    </style>

    <style name="Theme.SearchResults" parent="Theme.PlaylistMaker">
        <item name="textColorPrimary">@color/yp_black</item>
        <item name="textColorSecondary">@color/yp_text_gray</item>
    </style>
</resources>