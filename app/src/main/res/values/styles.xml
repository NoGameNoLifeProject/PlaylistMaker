<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_text_padding</item>
        <item name="iconTint">@color/text_main_black</item>
    </style>
    <style name="SettingsItemTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="SettingsItemButton">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:gravity">end</item>
        <item name="tint">@color/settings_icon_color</item>
    </style>
    <style name="SettingsItemLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:padding">@dimen/pd_m</item>
    </style>
    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="navigationIcon">@drawable/arrow_back_icon</item>
        <item name="navigationIconTint">?textColorSecondary</item>
        <item name="titleTextAppearance">@style/ToolBarTitleTextAppearance</item>
    </style>
    <style name="ToolBarTitleTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
</resources>