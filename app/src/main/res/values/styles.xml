<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_text_padding</item>
        <item name="iconTint">@color/text_main_black</item>
    </style>
    <style name="ToolBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="navigationIcon">@drawable/arrow_back_icon</item>
        <item name="navigationIconTint">?textColorSecondary</item>
        <item name="titleTextAppearance">@style/ToolBarTitleTextAppearance</item>
    </style>
    <style name="ToolBarTitleTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/pd_m</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="drawableTint">@color/settings_icon_color</item>
    </style>
    <style name="SettingsSwitch" parent="SettingsItem">
        <item name="thumbTint">@color/yp_white</item>
        <item name="trackTint">@color/yp_text_gray</item>
    </style>
</resources>