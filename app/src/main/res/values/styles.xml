<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/yp_white</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?textColorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="cornerRadius">@dimen/corner_radius_medium</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_text_padding</item>
        <item name="iconTint">@color/yp_black</item>
    </style>
    <style name="FragmentTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">14dp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>
    <style name="FragmentTitleTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>
    <style name="SettingsItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/pd_m</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
    <style name="SettingsSwitch" parent="SettingsItem">
        <item name="thumbTint">@color/yp_white</item>
        <item name="trackTint">@color/yp_text_gray</item>
    </style>
    <style name="SearchAdditionalButton">
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@color/yp_white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/pd_l</item>
        <item name="cornerRadius">54dp</item>
        <item name="backgroundTint">@color/yp_black</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
    </style>
    <style name="MediaTabTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?textColorSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationTextAppearance">
        <item name="fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_height">56dp</item>
        <item name="backgroundTint">?backgroundSecondaryColor</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextAppearance</item>
        <item name="itemIconTint">@drawable/bottom_navigation_color_selector</item>
        <item name="itemTextColor">@drawable/bottom_navigation_color_selector</item>
    </style>
</resources>